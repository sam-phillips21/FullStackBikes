{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <h2 class="display-6">All Bikes</h2>
        <div class="row">
            {% for bike in bikes %}
                <div class="card">
                    <h5 class="card-header">{{bike.name}}</h5>
                    <div class="card-body">
                        <h5 class="card-title">
                            {% if bike.fast %}
                                Enjoy
                            {% else %}
                                Go Faster
                            {% endif %}
                        </h5>
                        <p class="card-text">The color of this {{bike.name}} is {{bike.color}}</p>
                         <a class="btn btn-info" href="/bikes/{{bike.id}}">
                            View {{bike.name}}
                         </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}